{
    "name": "eclipxe/engineworks-dbal",
    "description": "PHP Database Abstraction Layer",
    "keywords": ["dbal", "mysqli", "mssql", "sqlite", "sql", "recordset", "reader", "database abstraction layer"],
    "homepage": "https://github.com/eclipxe13/engineworks-dbal",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos C Soto",
            "email": "eclipxe13@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "vlucas/phpdotenv": "^2.4",
        "fzaninotto/faker": "^1.7",
        "phpunit/phpunit": "^5.7|^6.5",
        "overtrue/phplint": "^1.0",
        "squizlabs/php_codesniffer": "^3.2",
        "friendsofphp/php-cs-fixer": "^2.10",
        "phpstan/phpstan-shim": "^0.9.1"
    },
    "suggest": {
        "ext-mysql": "*",
        "ext-mssql": "*"
    },
    "autoload": {
        "psr-4": {
            "EngineWorks\\DBAL\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EngineWorks\\DBAL\\Tests\\": "tests/Tests"
        }
    }
}
