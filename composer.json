{
    "name": "eclipxe/engineworks-dbal",
    "description": "PHP Database Abstraction Layer",
    "homepage": "https://github.com/eclipxe13/engineworks-dbal",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos C Soto",
            "email": "eclipxe13@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "ext-pdo": "*",
        "ext-sqlite3": "*",
        "phpunit/phpunit": "@stable",
        "vlucas/phpdotenv": "@stable",
        "fzaninotto/faker": "@stable",
        "jakub-onderka/php-parallel-lint": "@stable",
        "squizlabs/php_codesniffer": "@stable",
        "friendsofphp/php-cs-fixer": "@stable",
        "scrutinizer/ocular": "@stable",
        "satooshi/php-coveralls": "@stable"
    },
    "suggest": {
        "ext-mysql": "*",
        "ext-mssql": "*"
    },
    "autoload": {
        "psr-4": {
            "EngineWorks\\DBAL\\": "sources/EngineWorks/DBAL/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EngineWorks\\DBAL\\Tests\\": "tests/EngineWorks/DBAL/Tests/"
        }
    }
}
